@using Pos.ViewModel
@model ProductTypeVm

@{
    ViewData["Title"] = "Create";
}

<h1>Add Mode</h1>

@* <partial name="_Alerts" /> *@
<partial name="_Toast" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Insert" class="vstack gap-3">

            <div>
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name"
                       class="form-control"
                       placeholder="Required name field..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Details" class="form-label"></label>
                <textarea asp-for="Details"
                          class="form-control"
                          placeholder="Optional details field..."
                          rows="4">
                </textarea>
            </div>

            <div>
                <label asp-for="SortOrder" class="form-label"></label>
                <input asp-for="SortOrder"
                       class="form-control"
                       min="0"
                       type="number"/>
                <span asp-validation-for="SortOrder" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-2">
                <button class="btn btn-primary btn-fixed" type="submit">
                    Save
                </button>

                <a asp-action="Index" class="btn btn-info btn-fixed">
                    List Page
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

